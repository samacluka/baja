<%include ../partials/header%>

<div class="container">

  <header class="jumbotron">
    <div class="container">
      <h2>Welcome to McMaster Baja Racing!</h2>
      <p>
        <a class="btn btn-primary btn-lg" href="/expenseReports/new">Add a new Expense Report</a>
      </p>
    </div>
  </header>


  <div class="row text-center" style="display: flex; flex-wrap: wrap;">
    <% expenseReports.forEach(function(expenseReport){ %>
      <a href="/expenseReports/<%= expenseReport._id %>">
        <div class="col-md-3 col-sm-6">
          <div class="thumbnail">
            <div class="caption">
              <h4><%=  expenseReport.name %></h4>
              <h6>Created on <%= expenseReport.created.toDateString() %></h6>
              <h6>Created by <%= expenseReport.author.firstName + " " + expenseReport.author.lastName %></h6>
             </div>
             <p>
               <a class="btn btn-primary" href="/expenseReports/<%= expenseReport._id %>">More Info</a>
             </p>
            </div>
         </div>
       </a>
    <% }); %>
  </div>



</div>

<%include ../partials/footer%>
