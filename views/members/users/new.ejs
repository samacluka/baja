<% const views = '../../' %>
<%- include(views+'partials/header'); %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Add a New Expense Item to <%= expenseReport.name %></h1>
    <div style="width: 30%; margin: 35px auto" class="">
      <form class="" action="/expenseReports/<%= expenseReport._id %>/expenseItems" method="post">
        <div class="form-group"><input class="form-control" type="text" placeholder="text" name="expenseItem[text]"></div>
        <div class="from-group"><input class="btn btn-lg btn-primary btn-block" type="submit" name="Submit" value="Submit"></div>
      </form>
      <a href="/expenseReports">Go Home</a>
    </div>
  </div>
</div>

<%- include(views+'partials/footer'); %>
