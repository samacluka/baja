<% const views = '../' %>
<%- include(views+'partials/header4'); %>

<div id="home">
  <div class="container">
    <div class="carousel-styles p-3">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">

          <div class="carousel-item active">
            <img class="d-block w-100" src="<%= images.resources[0].url %>" alt="Slide #1">
          </div>

          <% for(var i = 1; i < images.resources.length; i++ ) {%>
            <div class="carousel-item">
              <img class="d-block w-100" src="<%= images.resources[i].url %>" alt="Slide #<%= i+1 %>">
            </div>
          <% } %>

        </div>

        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>
</div>

<%- include(views+'partials/footer4'); %>
