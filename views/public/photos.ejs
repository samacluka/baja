<% const views = '../' %>
<%- include(views+'partials/header4'); %>

<div id="photos">
  <div class="pt-3">

    <!-- Modal -->
    <div class="modal fade hidden-sm-down" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-body">
            <img id="modal_img" class="gallery-modal-img" src="" alt="image">
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row row-eq-height">
        <% images.resources.forEach(function(image){ %>
          <div class="col-lg-4 col-md-6 col-sm-12 p-2">
            <div class="modal-link" data-toggle="modal" data-target="#exampleModalCenter">
              <div class="card card-link-floater card-shadow">
                <div class="card-img-mask card-img-mask-top">
                  <img class="card-img-top" src="https://res.cloudinary.com/<%= process.env.CLOUDINARY_CLOUD_NAME %>/image/upload/q_25/<%= image.public_id %>" alt="image">
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  </div>

</div>

<%- include(views+'partials/footer4'); %>
