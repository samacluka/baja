<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>McMaster Baja Racing</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  </head>
  <body>

    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a href="/" class="navbar-brand">McMaster Baja Racing</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <% if(!currentUser){ %>
              <li><a href="/login">Login</a></li>
              <li><a href="/register">Sign Up</a></li>
            <% } else { %>
              <li><a href="#">Signed in as <%= currentUser.firstName + " " + currentUser.lastName %></a></li>
              <li><a href="/logout">Logout</a></li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <% if(error && (error.length > 0)){ %>
      <div class="container">
        <div class="alert alert-danger" role="alert">
          <h5 class="flash-message"><%= error %></h5>
        </div>
      </div>
    <% } %>

    <% if(success && (success.length > 0)){ %>
      <div class="container">
        <div class="alert alert-success" role="alert">
          <h5 class="flash-message"><%= success %></h5>
        </div>
      </div>
    <% } %>
